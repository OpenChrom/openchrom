    </developer>
  </developers>
  <!--
	MODULES
  -->
  <modules>
    <module>../../plugins/net.openchrom.chromatogram.msd.converter.supplier.pdf</module>
    <module>../../plugins/net.openchrom.chromatogram.msd.converter.supplier.pdf.ui</module>
