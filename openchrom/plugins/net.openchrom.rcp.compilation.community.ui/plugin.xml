<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.chemclipse.rcp.app.ui.org.eclipse.chemclipse.rcp.application"
            name="OpenChrom Analytics Edition (McLafferty)">
         <property
               name="windowImages"
               value="icons/logo_16x16.png,icons/logo_32x32.png,icons/logo_48x48.png,icons/logo_64x64.png,icons/logo_128x128.png">
         </property>
         <property
               name="aboutText"
               value="OpenChrom Analytics Edition (McLafferty) - the open source software for chromatography and spectrometry">
         </property>
         <property
               name="aboutImage"
               value="icons/about_250x330.png">
         </property>
         <property
               name="appName"
               value="OpenChrom Analytics Edition (McLafferty)">
         </property>
         <property
               name="applicationXMI"
               value="platform:/plugin/org.eclipse.chemclipse.rcp.app.ui/Application.e4xmi">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="net.openchrom.rcp.compilation.community.ui.splash.EnhancedSplashHandler"
            id="net.openchrom.rcp.compilation.community.ui.splash.enhancedSplashHandler">
      </splashHandler>         
      <splashHandlerProductBinding
            productId="net.openchrom.rcp.compilation.community.ui.product"
            splashId="net.openchrom.rcp.compilation.community.ui.splash.enhancedSplashHandler">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.swt.theme">
      <stylesheet
            uri="css/default.css">
         <themeid
               refid="org.eclipse.e4.ui.css.theme.e4_default">
         </themeid>
      </stylesheet>
      <stylesheet
            uri="css/classic.css">
         <themeid
               refid="org.eclipse.e4.ui.css.theme.e4_classic">
         </themeid>
      </stylesheet>
      <stylesheet
            uri="css/dark.css">
         <themeid
               refid="org.eclipse.e4.ui.css.theme.e4_dark">
         </themeid>
      </stylesheet>
   </extension>
</plugin>
